@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<ContentModels.BlogHome>
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
<div class="sidebar" role="aside">

    <header class="header">

        @if (Model.Value("blogSidebarLogo") != null)
        {
            <a href="@Model.Url()">
                <img id="blog" class="logo" src="@Model.BlogSidebarLogo.MediaUrl()" alt="Mikkelhm Blog logo">
            </a>
        }

        <h1 class="title"><a href="@Model.Url()">@Model.BlogTitle</a></h1>

        <div class="separator"></div>

        <p class="description">@Model.BlogDescription</p>
        <div class="social-icons">

            <a href="https://github.com/mikkelhm" class="icon icon-github"></a>
            <a href="https://plus.google.com/+MikkelHolckMadsen?rel=author" class="icon icon-gplus"></a>
            <a href="https://twitter.com/mikkelhm" class="icon icon-twitter"></a>

            @*<a href="@Url.ArticulateRssUrl(Model)" class="icon-rss"></a>*@
        </div>

        <div class="separator"></div>

        @*@Html.ThemedPartial(Model, "SearchBox")*@

        @await Html.PartialAsync("Blog/TagCloud", Model)

    </header>
</div>